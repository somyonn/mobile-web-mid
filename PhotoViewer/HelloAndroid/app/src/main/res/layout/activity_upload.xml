<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="16dp">

    <EditText android:id="@+id/editTitle" android:hint="제목" android:layout_width="match_parent" android:layout_height="wrap_content" />
    <EditText android:id="@+id/editText" android:hint="내용" android:layout_width="match_parent" android:layout_height="wrap_content" android:minLines="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/buttonSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지 선택" />

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:visibility="gone"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/buttonClearImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_marginStart="8dp"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="업로드" />
</LinearLayout>
